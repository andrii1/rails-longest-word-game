<h1>New game</h1>
<div class="letters">
<% @letters.each { |letter| %>
<div class="letter">
<%=letter %>
</div>
<% }  %>
</div>
<p>What is the longest word you can find?</p>
<form action="/score" method="get">
  <input type="text" name="word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" id="button" value="Play">
</form>
